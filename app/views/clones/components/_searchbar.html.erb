<%= search_form_for @q, :url => clones_path, :class => "form-inline" ,:remote => true do |f| %>
  <small>
  	<div class="row">
			<div class="col-lg-12">
				<h3><i class="fa_icon fa fa-search"></i> Clones</h3>
			</div>
	</div>
  <div class="row">
	  <div class="col-lg-12">
			  	<%= f.label "Search by any terms in name or comment*:" %>
			  	<%= f.search_field :name_or_comment_or_cmeth_name_cont, :class => "col-lg-12"%>
	</div>
</div>
		
<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
	
  <div class="panel panel-default">
  	
    <div class="panel-heading" role="tab" id="heading">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse" aria-expanded="false" aria-controls="collapse">
        Fine search
        <i class="indicator glyphicon glyphicon-chevron-right  pull-right"></i></a>
      </h4>
    </div>
    <div id="collapse" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading">
      	<div class="panel-body">
      	<div class="row">
			<div class="col-lg-6">
						<%= f.label "Start date " %>
						<%= f.search_field :created_at_gteq, value: @created_at_date_gteq_with_proper_format, 'data-behaviour' => 'datepicker', :class=>"col-lg-12"%>
			</div>
			<div class="col-lg-6">
				<%= f.label "End date "%>
						<%= f.search_field :created_at_lteq, value: @created_at_date_lteq_with_proper_format, 'data-behaviour' => 'datepicker', :class=>"col-lg-12"%>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<%= f.label "Projects"%>
				<%= f.select(:projects_id_in, @projects_all, {:include_blank=> " "}, {:class => "select2-select col-lg-12", :multiple => true}) %>
			</div>
		</div>
		<div class="row">
		<div class="col-lg-6">
			<%= f.label "Insert" %>
			<%= f.select(:inserts_id_in, @inserts_all, {:include_blank => ''}, {:class => "select2-select col-lg-12", :multiple => true} )%>
		</div>
		<div class="col-lg-6">
			<%= f.label "Backbones" %>
			<%= f.select(:backbones_id_in, @inserts_all, {:include_blank => ''}, {:class => "select2-select col-lg-12", :multiple => true} )%>
		</div>
	</div>
 	<div class=" row">
 		<div class="col-lg-12">
 			<span class="help-block"><em>*Enter all or part of the value.</em></span>
 		</div>
 	</div>
	</div>
	</div>
	</div>
	</div>
	</div>
  	<div class="row">	
				<div class="form-group pull-right">
					<%= f.submit class:"btn btn-default" %>
					<%= link_to "Clear Search", clones_path, class:"cancel-button btn btn-default" %>
			</div>
		</div>
</small>
<% end %>