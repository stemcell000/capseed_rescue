-# frozen_string_literal: true
= simple_form_for(@box_type) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :max_position
    = f.input :comment

  .form-actions
    = f.button :submit
