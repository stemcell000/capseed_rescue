<% rows = ('a'..'z').to_a[0..(h_max-1)] %>
<% cols = (1..26).to_a[0..(v_max-1)] %>
<div class="panel">
	<div class="panel-body">
		<div class="col-lg-12">
			<h5><%="#{box.name} #{box.barcode}"%></h5></div>
			<% unless box.shelf.nil? %>
				<h6>stored in : <%= box.shelf.container.name+" | "+box.shelf.name %></h6>
			<%end%>
		<table>
		<% cols.each do |r| %>
			<tr>
				<% rows.each do |c| %>
					<td style="padding: 1px;">
						
						<div class="bg-default col-lg-1 col-md-1 col-sm-1 slot" style="min-width: 55px; min-height: 55px; max-width: 55px; max-height: 55px; text-align: center; vertical-align: middle; border:1px solid black; border-radius: 2px; ; margin: 0; padding:0;">
						<div class="location-label text-left text-primary" style="font-size: 50%; text-align: left; margin: 0; padding:0 0 0 1px;"></div>
						
						</div>
					<td>
				<%end%>
			</tr>
		<%end%>
		</table>
	</div>
</div>
