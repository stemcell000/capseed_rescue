<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
 	<%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag asset_path('favicon.ico') %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
  	<%= include_gon(:watch => true) %>
  	<%= Gon::Base.render_data({}) %>
  	<%= render 'layouts/header' %>
  	<%= render :partial => 'components/modal_alt' %>
  	<%= render :partial => 'components/modal' %>
  	<%= render :partial => 'components/modal_pb' %>
  	<%= render :partial => 'components/modal_user' %>
    <div class="container">
    	<div id='flash-msg-container'>
			<%= render partial: "layouts/flash_messages", :flash => flash %>
	</div>

<% case params[:controller] %>
	<% when "assays" || params[:controller] == "clones"%>
		<h3>Cloning manager</h3>
		<nav class="navbar-cloning" role="navigation">
    			<div class="collapse navbar-collapse navbar-cloning">
				<%= render :partial => 'components/dynamic_menu' %>
				<% provide(:title, "Cloning Manager") %>    
        </div>
				</nav>
	<%end%>
      <div class="container">
						     <%= yield %>
		</div>
 	</body>
 	<div>
 		<div class="col-lg-12">
      		<%= render 'layouts/footer' %>
      	</div>
    </div>
</html>
