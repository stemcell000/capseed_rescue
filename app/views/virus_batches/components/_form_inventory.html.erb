<div class="panel panel-default">
	<div class="panel-body">
	<%= simple_form_for ([@virus_production, @virus_batch]), remote: false, html: {class: 'vertical-form'} do |f|  %>
	
	<%= f.error_notification %>
	<ul class="errors"></ul>
  	<div class="row">
		<div class="col-lg-3">
			<%=f.input :name, :input_html => { :value => f.object.name || @name } %>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4">
			<%=f.input :date, :label => "Date of production", :as => :string, :input_html => { :value => (f.object.date.strftime("%B %e, %Y") if f.object.date), "data-behaviour" => "datepicker" } %>
		</div>
		<div class="col-lg-4">
			<%=f.input :date_of_thawing, :label => "Date of thawing", :as => :string, :input_html => { :value => (f.object.date_of_thawing.strftime("%B %e, %Y") if f.object.date_of_thawing), "data-behaviour" => "datepicker" } %>
		</div>
	</div>
	<div class="row">
  		<div class="col-lg-4">
  			<%= f.input :volume, :label => "Volume: " %>
  		</div>
  		<div class="col-lg-4">
  			<%=f.association :vol_unit, :label => "Volume Units", :collection => VolUnit.all, :placeholder => "Select units.", input_html: { class: 'select2-select' }, :selected => '1'%>
		</div>
	</div>
	<div class="row">
	<div class="col-lg-8">
		<%= f.input :comment, :label => "Comment:" %>
	</div>
	</div>
	<div class="row">
		<div class="col-lg-4">
			<%=f.input :barcode %>
		</div>
	</div>
			
		<div class="btn-group row" role="group" aria-label="...">
			<div class="col-xs-12 right">
				<%= f.submit "Save", :class => "btn btn-primary" %>
	        		<%= link_to "Cancel", :back, :class => "btn btn-default" %>
	        </div>
		</div>
<% end %>
</div>
</div>

