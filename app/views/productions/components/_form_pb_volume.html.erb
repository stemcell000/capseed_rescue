<%= simple_nested_form_for @production, url: update_pb_volume_production_path, :remote => true do |f|  %>
		<%= f.error_notification %>
		<ul class="errors"></ul>
		<%= f.input :id , :as => :hidden %>
			
							<%=f.fields_for :plasmid_batch_productions do |ff| %>
								<div class="row">
									<div class="col-lg-5 col-md-5 col-sm-5 align-bottom">
											<strong><%=ff.object.plasmid_batch.name%> - <%= ff.object.plasmid_batch.concentration %> <%= ff.object.plasmid_batch.unit.name %> - <%= ff.object.plasmid_batch.volume %> <%= ff.object.plasmid_batch.vol_unit.name %></strong>
											<%= ff.input :id , :as => :hidden %>
											<%= ff.input :volume %>
									</div>
								</div>
							<%end%>
				
	<div class="row">
		<div class="col-lg-12">
			<div class="btn-group" role="group" aria-label="...">
				<%= f.submit("Save", class: "btn btn-default", title: "Save the changes.") %>
		     	<%= f.submit 'Cancel', :type => :reset, :class => "btn btn-default", "data-dismiss" => "modal", "aria-hidden" => "true" %>
	        </div>
	  	</div>
	</div>
<%end%>
