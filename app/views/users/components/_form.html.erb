<%= simple_form_for @user, html: {class: 'vertical-form'}  do |f| %>
	  
	  <%= f.error_notification %>
	
	  <div class="form-inputs">
	  	<div class="row">
	  		<div class="col-lg-12 col-md-12 col-sm-12">
	    			<%= f.input :username, required: true, autofocus: true %>
	    		</div>
	    </div>
	    <div class="row">
	    		<div class="col-lg-6 col-md-6 col-sm-6">
	   		 	<%= f.input :firstname, required: true %>
	   		 </div>
	   		 <div class="col-lg-6 col-md-6 col-sm-6">
	   		 	<%= f.input :lastname, required: true %>
   		 	</div>
   		 </div>
	    <div class="row">
	    		<div class="col-lg-6">
	    			<%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
	    		</div>
	    		<div class="col-lg-6">
	    			<%= f.input :password_confirmation, required: true %>
	    		</div>
	    </div>
	    	<div class="row">
	    		<div class="col-lg-4 col-md-5 col-sm-5">
	    			<%= f.input :role, :collection => [ "administrator", "user", "guest"] ,required: true, :input_html => {:class => "select2-select"} %>
	   		</div>
	   	</div>
	   	<div class="row">
	   		<div class="col-lg-4">
	    			<%= f.input :email, required: true %>
	    		</div>
	    	</div>
	    	<div class="row">
	    		<div class="col-lg-4">	
	    			<%= f.input :actual_member %>
	    		</div>
	    	</div>
	    	<div class="row">
	    		<div class="col-lg-4">
	    			<%= f.input :cloning_notify %>
	    			<%= f.input :production_notify %>
	    		</div>
	    	</div>
	    	
	    
	    
	  </div>
	
	  <div class="row">
	 	<div class="btn-group" role="group" aria-label="...">
	 			<div class="col-lg-4">
	    			<%= f.submit "Save", :class => "btn btn-primary" %>
	    		</div>
	    		<div class="col-lg-4">
	        		<%= link_to "Cancel", :back, :class => "btn btn-default"%>
	        	</div>
	     </div>
	 </div>
	<% end %>
