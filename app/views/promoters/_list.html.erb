	  <table  class="table table-striped table-small">
	    <thead>
	    		<th class="col-lg-1 center">
		        <%= smart_listing.sortable "ID", :id %>
		    </th>
		    <th class="col-lg-2 center">
		        <%= smart_listing.sortable "Promoter", :name %>
		    </th>
		  	<th class="col-lg-3 center"> Actions</th>
	    </thead>
	    <tbody>
		  	<% smart_listing.collection.each do |p| %>
	      		<tr class="editable" data-id = "<%= p.id %>">
					<%= smart_listing.render object: p, partial: "promoters/promoter", locals: {object: p} %>
	        		</tr>
	      	<% end %>
	     <%= smart_listing.item_new colspan: 9, link: new_promoter_path(:object) %>
	    </tbody>
	  </table>
	  <%= smart_listing.paginate %>
	  <%= smart_listing.pagination_per_page_links %>
