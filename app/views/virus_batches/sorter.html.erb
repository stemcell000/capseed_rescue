<% provide(:title, "Batch sorter") %>
		<div id="info-container">
				<div class="col-lg-12">
					<div class="row">
						<div id="vb-container" class="col-lg-5">
							<%= render :partial => "virus_batches/components/content_inventory", :locals => {:virus_batches => @virus_batches} %>
						</div>
						<div class="col-lg-7 right">
							<div class="col-lg-12 col-md-12 col-sm-12" style="padding: 5px;">
								<%=select_tag "Box", options_from_collection_for_select(Box.all.order(name: :desc), "id", "name"), :class => 'select2-select', include_blank: true, onchange: "getBoxMap(this.value, '#map-container')" %>
							</div>
							<span><em><small>Choose a box then drag and drop each vial into a slot.</small></em></span>
						<div id="map-container"></div>
						</div><!--End of col-->
					</div><!--End of row-->
				</div>
			</div>