 <%= search_form_for @q, :url => virus_batches_path, :class => "form-inline" ,:remote => true do |f| %>
<small>

 <div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12">
				<h3><i class="fa_icon fa fa-search"></i> Virus batches</h3>
			</div>
</div>
		
<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12">
				<%= f.search_field :name_cont, class: "col-lg-12 col-md-12 col-sm-12", placeholder: "Search any terms."%>
		</div>
</div>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
	
  <div class="panel panel-default">
  	
    <div class="panel-heading" role="tab" id="heading">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse" aria-expanded="false" aria-controls="collapse">
        Fine search
        <i class="indicator glyphicon glyphicon-chevron-right  pull-right"></i></a>
      </h4>
    </div>
    
    <div id="collapse" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading">
      	<div class="panel-body">
<div class="row">
	<div class="col-lg-3 col-md-3 col-sm-3">
			<%= f.label "Number" %>
  			<%= f.search_field :name_cont %>
  	</div>
  	<div class="col-lg-3 col-md-3 col-sm-3">
			<%= f.label "Barcode" %>
  			<%= f.search_field :barcode_cont %>
  	</div>
</div>


<div class="row">
	<div class="col-lg-6 col-md-6 col-sm-6">
			<%= f.label "Comment" %>
  			<%= f.search_field :comment_cont, :class => "col-lg-12" %>
  	</div>
</div>

<div class="row">
	<div class="col-lg-4 col-md-6 col-sm-6">
		<h5 class="text-primary"><em>Search by ranges of date : </em></h5>
	</div>
	<div class="col-lg-4">
				<div class="form-group" >
					
						<%= f.label "Start date ", :class=>"control-label"  %>
						<%= f.search_field :date_gteq, value: @date_of_production_date_gteq_with_proper_format, 'data-behaviour' => 'datepicker'%>
				</div>
	</div>
	<div class="col-lg-4 col-md-6 col-sm-6">
				<div class="form-group" >
						<%= f.label "End date ", :class=>"control-label" %>
						<%= f.search_field :date_lteq, value: @date_of_production_date_lteq_with_proper_format, input_html: { class: "datepicker"}%>
				</div>
	</div>
</div>
	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-6">
			<span class="help-block"><em>*Enter all or part of the value.</em></span>
		</div>
	</div>
	</div>
<div class="row">
	<div class="form-group pull-right">
  			<%= f.submit class:"btn btn-default" %>
  			<%= link_to "Clear Search", request.path, class:"btn btn-default" %>
  </div>
</div>
</div>
</div>
</div>
</small>
<% end %>
