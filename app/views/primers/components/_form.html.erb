<%= simple_form_for @primer html: {class: 'vertical-form'} do |f|  %>
	<%= f.error_notification %>
	<ul class="errors"></ul>
	  	<!--Attention: la div form-group ui-front est indispensable au fonctionnement du champ autocomplete -->
			<div class="form-group ui-front">
				<div class="row">
						<div class="col-lg-4">
							<%= f.input :name,:label => "Name" %>
							<%= f.input :id, :as => :hidden %>
					 	</div>
					 	<div class="col-lg-2">
							<%= f.input :available,:label => "Available" %>
					 	</div>
				 </div>
				 <div class="row">
				 	<div class="col-lg-12">
				 		<%= f.input :sequence,:label => "Sequence" %>
				 	</div>
				 </div>
				 <div class="row">
				 	<div class="col-lg-12">
				 		<%= f.input :comment,:label => "Comment" %>
				 	</div>
				 </div>
 		<div class="row">
	 		<div class="btn-group" role="group" aria-label="...">
	 			<div class="col-lg-4">
	    			<%= f.submit "Save", :class => "btn btn-primary" %>
	    		</div>
	    		<div class="col-lg-4">
	        		<%= link_to "Cancel", :back, :class => "btn btn-default"%>
	        	</div>
	        </div>
	  </div>
<%end%>


