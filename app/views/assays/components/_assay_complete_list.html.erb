<% if cb.plasmid_batches.empty?%>
			<p>No validated plasmid to display.<br />You cannot close this Cloning</p>
<%end%>
<% if !cb.plasmid_batches.empty?%>
<table class="table table-striped table-bordered success" >
			<thead>
				<th>Name</th>
				<th>Plasmid number</th>
				<% if !cb.plasmid_batches.where(:box_id => nil ).exists? %>
				<%= content_tag(:th, "Tracking")%>
				<%end%>
			</thead>
				<% cb.plasmid_batches.each do |pb| %>
					<tr>
						<td class="col-sm-2"><%= pb.name %></td>
						<td class="col-sm-1"><%= pb.id %></td>
						<% if !cb.plasmid_batches.where(:box_id => nil ).exists? %>
							<td class="col-sm-2">
								Box# : <%=pb.box.name%><br />
								<%if !pb.row_id.nil? && !pb.column_id.nil?%>
									Location : <%=pb.row.name%><%=pb.column.name%>
								<%end%>
							</td>
						<%end%>
					</tr>
				<% end %>
</table>
<% end %>
