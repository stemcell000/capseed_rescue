<%= search_form_for @q, :url =>users_path, :class=>"form-horizontal" do |f| %>
   	<div class="row">
			<div class="col-lg-12">
				<h3><i class="fa_icon fa fa-search"></i> Users </h3>
			</div>
	</div>
		<div class="row">
			<div class="col-lg-12">
				<%= f.search_field :firstname_or_lastname_cont, class: "col-xs-12", placeholder: "Search any term"%>
			</div>
		</div>
		<div class="row top20">	
			<div class="form-group pull-right">
					<%= f.submit class:"cancel-button btn btn-default" %>
					<%= link_to "Clear Search", users_path, class:"cancel-button btn btn-default" %>
			</div>
		</div>
<%end%>