<% unless @boxes.empty?%>
<table>
	<thead>
        <tr>
            <th><%= sort_link(@q, :id) %></th>
            <th><%= sort_link(@q, :barcode) %></th>
        </tr>
    </thead>
    <tbody>
    		<%@boxes.each do |box|%>
    		<tr>
    			<td>
    				<%=box.name%>
    			</td>
    			 <td>
    				<%=box.barcode%>
    			</td>
		</tr>
		<%end%>
    </tbody>
</table>
<div class="row">
  <div class="col-lg-12 text-center">
    <%== pagy_bootstrap_nav(@pagy) %>
    <%== pagy_bootstrap_nav_js(@pagy) %>
  </div>
</div>
<%else%>
	<span>No box to display</span>
<%end%>
