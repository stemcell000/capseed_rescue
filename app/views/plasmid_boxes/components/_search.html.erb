 <%= search_form_for @q do |f| %>
 <div class="row">
			<div class="col-xs-12">
				<h3><i class="fa_icon fa fa-search"></i> Plasmid boxes and batches</h3>
			</div>
</div>
		
<div class="row">
		<div class="col-xs-12">
				<%= f.search_field :name_or_barcode_cont, class: "col-xs-12", placeholder: "Search any terms."%>
		</div>
</div>
<div class="row top10">
	<div class="form-group pull-right">
  			<%= f.submit class:"btn btn-default" %>
  			<%= link_to "Clear Search", request.path, class:"btn btn-default" %>
  			<%= link_to "New box", new_plasmid_box_path, class: "btn btn-default" %>
  	</div>
</div>
<% end %>
