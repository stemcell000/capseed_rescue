 <%= search_form_for @q, :url => display_all_productions_path, :class => "form-inline" ,:remote => true do |f| %>
<small>
	
<div class="row">
	<div class="col-lg-5">
		<h5 class="text-primary"><em>Basic Research : </em></h5>
	</div>
</div>
<div class="row">
	<div class="col-lg-5">
		<div class="row">
			<%= f.label "ID", :class=>"control-label col-lg-4"  %>
  			<%= f.search_field :id_cont, :class=>"col-lg-7" %>
  		</div>
  		
  		<div class="row">
			<%= f.label "Name or comment*", :class=>"control-label col-lg-4" %>
  			<%= f.search_field :name_or_comment_cont, :class=>"col-lg-7" %>
  		</div>
  		
  		<div class="row">
				  	<%= f.label "Plasmid (name or number)*", :class=>"control-label col-lg-4" %>
				  	<%= f.search_field :plasmid_batches_name_or_plasmid_batches_number_cont, :class=>"col-lg-7"%>
		 </div>
  	</div>
  <div class="col-lg-7">
  		<div class="row">
			<%= f.label 'Step', :class=>"control-label col-lg-3" %>
			<%= f.select(:step_eq, @steps, {:include_blank => " "}, {:class => "select2-select project col-lg-7"}) %>
		</div>
		<div class="row">
			<%= f.label 'Project', :class=>"control-label col-lg-3"%>
			<%= f.select(:projects_id_in, @projects_all,{:include_blank => " "}, {:class => "select2-select project col-lg-7"}) %>
		</div>	
	</div>
</div>
<div class="row">
	<div class="col-lg-4">
		<h5 class="text-primary"><em>Search by ranges of date of creation : </em></h5>
	</div>
	<div class="col-lg-3">
			<h5 class="text-primary"><em>Search by plasmids: </em></h5>
	</div>
</div>
<div class="row">
	<div class="col-lg-4">
				<div class="row" >
					<div class="col-lg-12">
						<%= f.label "Start date ", :class=>"control-label col-lg-4"  %>
						<%= f.search_field :created_at_gteq, value: @created_at_date_gteq_with_proper_format, 'data-behaviour' => 'datepicker'%>
					</div>
				</div>
				<div class="row" >
					<div class="col-lg-12">
						<%= f.label "End date ", :class=>"control-label col-lg-4" %>
						<%= f.search_field :created_at_lteq, value: @created_at_date_lteq_with_proper_format, 'data-behaviour' => 'datepicker'%>
					</div>
				</div>
	</div>
	<div class="col-lg-8">
				<div class="row">
					<div class="col-lg-12">
						<%= f.label 'Combination of Plasmids', :class=>"control-label col-lg-2"%>
						<%= f.collection_select :clone_batches_id_in, @clone_batches_all, :id, :custom_label, {}, {:multiple => true, :class => "select2-select col-lg-10"} %>
					</div>
				</div>
	</div>
	
</div>
<div class="form-group row">
	<span class="help-block"><em>*Enter all or part of the value.</em></span>
</div>

<div class="row">
  <%= f.submit class:"btn btn-default" %>
  <%= link_to "Clear Search", request.path, class:"btn btn-default" %>
</div>
</small>
<% end %>