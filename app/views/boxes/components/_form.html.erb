<%= simple_form_for(@box) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  <div class="form-inputs">
    <%= f.input :barcode %>
  </div>
    <div class="form-inputs">
    <%= f.association :box_type, :collection=>BoxType.all %>
