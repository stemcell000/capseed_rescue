<% provide(:title, "Virus : Search") %>
		<h3><i class="fa_icon fa fa-search"></i> Virus Inventory</h3>
<%= render :partial => 'virus_productions/components/vp_search' %>

<%if can? :create, CloneBatch %>
<div class="row">
	<div class="col-xs-6">
		<div class="btn-group" role="group" aria-label="Basic example">
			<%= link_to "New virus", new_virus_production_path, class: "btn btn-primary" %>
			<a href="<%= virus_productions_path(request.parameters.merge({format: 'csv'})) %>" data-role="button" data-icon="info" data-mini="true" class= "btn btn-primary" data-turbolinks=false>Export</a>
		</div>
	</div>
	<div class="col-xs-6">
		<div id="display-hidden-container" class="pull-right"> <%= render :partial => "virus_productions/components/toggle_display_hidden", :locals => { :option => @option } %>
		</div>	
	</div>
</div>
<%end%>
<div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12">
		<%= render partial: "virus_productions/list_components/list", locals: {virus_productions: @virus_productions}%>
	</div>
</div>
