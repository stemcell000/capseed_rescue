<div class="container-fluid">	
<% unless users.empty? %>  
	  <table  class="table table-striped table-small">
	    <thead>
		    <th class="col-xs-6">
		        <%= sort_link(@q, :full_name, 'Name') %>
		    </th>
		    <th class="col-xs-2">
		        <%= sort_link(@q, :created_at, 'Registration') %>
		    </th>
		   	<th class="col-xs-3">
		        <%= sort_link(@q, :role, 'Role') %>
		    </th>
		    <th class="col-xs-1">
		    </th>
	    </thead>
	    <tbody>
		  	<% users.each do |user| %>
	      		<tr>
					<%= render partial: "users/list_components/object", locals: {object: user} %>
	        		</tr>
	      	<% end %>
	    </tbody>
	  </table>
<div class="row">
  <div class="col-lg-12 text-center">
    <%== pagy_bootstrap_nav(@pagy) %>
    <%== pagy_bootstrap_nav_js(@pagy) %>
  </div>
</div>
<%else%>
<div class="row text-center">
  <p>No item to display.</p>
</div>
<%end%>
<div class="container-fluid">	
